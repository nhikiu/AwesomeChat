<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_item_5"
        android:gravity="bottom|end">
        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_hint"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/grey_999999"
            android:layout_marginEnd="@dimen/margin_item_12"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_message_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="300dp"
                app:shapeAppearance="@style/corner_10"
                app:strokeColor="@null"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/sticker_1"
                android:layout_marginEnd="@dimen/margin_item_12"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>


    </LinearLayout>
</layout>
