<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item_3"
        android:gravity="end">
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:textSize="@dimen/size_16"
            android:text="@string/hint_message"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn_large"
            android:backgroundTint="@color/primary_color"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_item_15"
            android:layout_marginEnd="@dimen/margin_item_12"
            tools:ignore="SpUsage" />
        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/grey_999999"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin_item_12"/>
    </LinearLayout>
</layout>
